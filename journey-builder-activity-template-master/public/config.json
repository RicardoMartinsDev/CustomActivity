{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "images/icon_real.png",
       "category": "message"
    },
    "type": "REST",
    "lang": {
       "en-US": {
          "name": "API Martins",
          "description": "Chama API Sistema"
		  }
    },
	
    "arguments": {
        "execute": {
            "inArguments":[
				{
                    "emailAddress": "{{Contact.Attribute.Step_Ahead_MKT_Team.Email}}",
					"nome": "{{Contact.Attribute.Step_Ahead_MKT_Team.Nome}}",
					"apelido": "{{Contact.Attribute.Step_Ahead_MKT_Team.Apelido}}"
                }									
			],
            "outArguments": [],
            "url": "https://customactivity-apiconnection.herokuapp.com//execute"
        }
    },
    "configurationArguments": {
       "save": {
           "url": "https://customactivity-apiconnection.herokuapp.com/save"
       },
       "publish": {
           "url": "https://customactivity-apiconnection.herokuapp.com/publish"
       },
       "validate": {
           "url": "https://customactivity-apiconnection.herokuapp.com/validate"
       },
       "stop": {
           "url": "https://customactivity-apiconnection.herokuapp.com/stop"
       }
    },
    "wizardSteps": [
       { "label": "Step 1", "key": "step1" }
    ],
    "userInterfaces": {
       "configModal": {
           "height": 400,
           "width": 1000,
           "fullscreen": false
       }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "phoneNumber": {
                            "dataType": "Phone",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },
                    {
                        "emailAddress": {
                            "dataType": "Email",
                            "isNullable": false,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": [
                    {
                        "foundSignupDate": {
                            "dataType": "Date",
                            "direction": "out",
                            "access": "visible"
                        }
                    }
                ]
            }
        }
    }
}
